<%= form_for(book) do |f| %>
  <div class="form-group">
    <label for="book_title">Title</label>
    <%= f.text_field :title, value: @book.title, class: "form-control book_title" %>
  </div>
  <div class="form-group">
    <label for="book_opinion">Opinion</label>
    <%= f.text_area :body, value: @book.body, class:"form-control book_body" %>
  </div>

  <div class="form-group">
    <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
  </div>

<% end %>