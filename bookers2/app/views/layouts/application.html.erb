<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    　<%= csrf_meta_tags %>
    　<%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/d842fc8b42.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!--ヘッダーの記述-->
    <header>
     <nav class="navbar navbar-fixed-top navbar-inverse">

      <div class="container">
        <a class="navbar-brand" href=="/">
          <span>Bookers</span>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggar-icon"></span>
        </button>
        <nav>
         <div class="collapse navbar-collapse" id="navbarNavDropdown"></div>
          <ul class="navbar-nav ml-auto">
            <!--if文でサインインとアウト時の表示を変更-->
            <% if user_signed_in? %>

             <li><%= link_to ' home', users_show_path(current_user), class: 'fas fa-home' %></li>
             <li><%= link_to ' users', user_session_path, class: 'fas fa-user' %></li>
             <li><%= link_to ' books', books_path, class: 'fas fa- book-open' %></li>
             <li><%= link_to ' logout', destroy_user_session_path, method: :delete, class: 'fas fa-sign-out-alt' %></li>
            <% else %>
             <li><%= link_to ' home', root_path, class: 'fas fa-home' %></li>
             <li><%= link_to ' about', homes_about_path, class: 'fas fa-link' %></li>
             <li><%= link_to ' sign up', new_user_registration_path, class: 'fas fa-user-plus' %></li>
             <li><%= link_to ' login', new_user_session_path, class: 'fas fa-sign-in-alt' %></li>
            <% end %>
          </ul>
        </nav>
     </nav>
    </header>
  </body>

    <%= yield %>
    <footer>
      <div class="row">
        <div class="mx-auto">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </footer>
  </body>
</html>
